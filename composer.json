{
  "name": "crewstyle/olympus",
  "type": "project",
  "description": "The Olympus framework, Your simple, easy to use and powerfull framework to deploy and work with WordPress. An awesome framework build with â™¥ for WordPress developers.",
  "keywords": ["olympus", "wordpress", "framework", "php"],
  "homepage": "https://github.com/crewstyle/Olympus",
  "license": "MIT",
  "authors": [
    {
      "name": "Achraf Chouk",
      "email": "achrafchouk@gmail.com",
      "homepage": "https://github.com/crewstyle"
    }
  ],
  "autoload": {
    "psr-4": {
      "Olympus\\Handler\\": "app/components/Handler/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.x-dev"
    },
    "installer-paths":{
      "web/statics/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/statics/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/statics/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/cms"
  },
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "crewstyle/olympus-zeus": ">=4.0",
    "johnpbloch/wordpress": ">=4.3",
    "wpackagist-theme/twentysixteen": "*"
  },
  "require-dev": {
    "composer/composer": "^1.0"
  },
  "scripts": {
    "build-files": [
      "Olympus\\Handler\\Configurator::build",
      "mkdir -p web/medias/zeus && cp -r vendor/crewstyle/olympus-zeus/assets web/medias/zeus"
    ],
    "test": [
      "vendor/bin/phpcs --ignore=web/cms/,vendor/ -n -s ."
    ]
  }
}
